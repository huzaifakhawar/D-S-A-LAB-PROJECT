<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="213.0" prefWidth="402.0" style="-fx-background-color: linear-gradient(to bottom, #2C2C2C, #0D0D0D);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PatientController">

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="7.0" layoutY="2.0" onAction="#handleBack" onMouseEntered="#handleBackMouseEnter" onMouseExited="#handleBackMouseExit" prefHeight="39" prefWidth="42" style="-fx-background-color: transparent; -fx-background-radius: 30; -fx-text-fill: #FFFFFF; -fx-font-family: 'Segoe UI Bold';" text="←" />

    <!-- Welcome Label -->
    <Label layoutX="114.0" layoutY="19.0" style="-fx-text-fill: #38e4c5; -fx-font-family: 'Segoe UI Bold'; -fx-font-size: 14pt;" text="Patient Dashboard">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    
    <!-- Name TextField -->
    <TextField fx:id="nameTextField" layoutX="123.0" layoutY="56.0" promptText="Enter your name" style="-fx-background-color: transparent; -fx-border-color: #38e4c5; -fx-border-width: 0px 0px 2px 0px; -fx-text-fill: #FFFFFF;" />
    
    <!-- View Profile Button -->
    <Button layoutX="115.0" layoutY="101.0" onAction="#handleViewProfile" onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" prefHeight="35.0" prefWidth="157.0" style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt;" text="View Profile" textFill="#FFFFFF" />
    <!-- Logout Button -->
    <Button layoutX="136.0" layoutY="144.0" onAction="#handleLogout" onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" prefHeight="35.0" prefWidth="117.0" style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt;" text="Logout" textFill="#FFFFFF" />

    <!-- Spacing Container -->
    <HBox alignment="center" layoutX="50" layoutY="150" spacing="10" />
   <FontAwesomeIcon fill="#38e4c5" glyphName="USER" layoutX="101.0" layoutY="78.0" size="1.3em" text="" />

</AnchorPane>
