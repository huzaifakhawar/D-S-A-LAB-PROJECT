<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="622.0" prefWidth="631.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AdminController">

    <!-- Admin Dashboard Section -->
    <AnchorPane prefHeight="293.0" prefWidth="631.0" style="-fx-background-color: #424242; -fx-border-color: #38e4c5;">
        <children>
            <!-- Title Label -->
            <Label alignment="CENTER" layoutX="200.0" layoutY="67.0" prefHeight="32.0" prefWidth="199.0" text="Admin Dashboard" textFill="#38e4c5">
                <font>
                    <Font name="Segoe UI Bold" size="22.0" />
                </font>
            </Label>
            
            <!-- Action Buttons with Transition -->
            <Button fx:id="viewReportsButton" layoutX="261.0" layoutY="207.0" onAction="#handleViewReports" text="View Reports" 
                    style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt; -fx-text-fill: #FFFFFF;" 
                    onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" />
                    
            <Button fx:id="manageStaffButton" layoutX="257.0" layoutY="142.0" onAction="#handleManageStaff" text="Manage Staff" 
                    style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt; -fx-text-fill: #FFFFFF;" 
                    onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" />
                    
            <Button fx:id="managePatientsButton" alignment="CENTER" layoutX="246.0" layoutY="109.0" onAction="#handleManagePatients" text="Manage Patients" 
                    style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt; -fx-text-fill: #FFFFFF;" 
                    onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" />
                    
            <Button fx:id="deleteButton" layoutX="257.0" layoutY="175.0" onAction="#handleDeletePatient" text="Delete Patient" 
                    style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt; -fx-text-fill: #FFFFFF;" 
                    onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" />
                    
            <Button fx:id="logoutButton" layoutX="278.0" layoutY="244.0" onAction="#handleLogout" text="Logout" 
                    style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt; -fx-text-fill: #FFFFFF;" 
                    onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" />
        </children>
    </AnchorPane>

    <!-- Manage Patients Section (Initially Hidden) -->
    <VBox fx:id="managePatientsPane" spacing="10" visible="false">
        <!-- Table for Appointments -->
        <TableView fx:id="appointmentsTable" style="-fx-background-color: #333333;">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" />
                <TableColumn fx:id="phoneColumn" text="Phone" />
                <TableColumn fx:id="diseaseColumn" text="Disease" />
                <TableColumn fx:id="timeColumn" text="Time" />
                <TableColumn fx:id="doctorColumn" text="Doctor" />
                <TableColumn fx:id="genderColumn" text="Gender" />
                <TableColumn fx:id="priceColumn" text="Price" />
                <TableColumn fx:id="wardColumn" text="Ward" />
            </columns>
        </TableView>
        
        <!-- Ward Assignment Section -->
        <HBox alignment="CENTER" spacing="10">
            <Label text="Assign Ward" style="-fx-text-fill: #FFFFFF;"/>
            <ComboBox fx:id="wardComboBox" style="-fx-background-color: transparent; -fx-border-color: #38e4c5; -fx-border-width: 0px 0px 2px 0px; -fx-text-fill: #FFFFFF;" />
            <Button fx:id="assignWardButtonForPatients" onAction="#handleAssignWardForPatients" onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt;" text="Assign Ward " textFill="#FFFFFF" />  
        </HBox>
    </VBox>

    <!-- Name Input Section (Initially Hidden) -->
    <HBox fx:id="nameInputPane" alignment="CENTER" spacing="10" visible="false">
        <Label text="Enter Patient's Name" style="-fx-text-fill: #FFFFFF;" />
        <TextField fx:id="nameTextField" style="-fx-background-color: transparent; -fx-border-color: #38e4c5; -fx-border-width: 0px 0px 2px 0px; -fx-text-fill: #FFFFFF;" />
    </HBox>

    <!-- Manage Staff Section (Initially Hidden) -->
    <VBox fx:id="manageStaffPane" spacing="10" visible="false">
        <!-- Table for Doctors -->
        <TableView fx:id="doctorsTable" style="-fx-background-color: #333333;">
            <columns>
                <TableColumn fx:id="doctorNameColumn" text="Name" />
            </columns>
        </TableView>
        
        <!-- Delete Doctor Button -->
        <Button fx:id="deleteDoctorButton" onAction="#handleDeleteDoctor" onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt;" text="Update Appointment" textFill="#FFFFFF" />
    </VBox>

</VBox>
