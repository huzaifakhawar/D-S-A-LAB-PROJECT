            <Button layoutX="40.0" layoutY="300.0" onAction="#handleMakeAppointment" onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" prefWidth="240.0" style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt;" text="Make an Appointment" textFill="#FFFFFF">
            </Button>
         </children>
      </AnchorPane>

      <!-- Header Section -->
      <Label alignment="CENTER" layoutY="13.0" prefWidth="700.0" text="AL-SHIFA INTERNATIONAL HOSPITAL" textFill="#38e4c5">
         <font>
            <Font name="Sitka Display Bold" size="38.0" />
         </font>
      </Label>

      <!-- Footer Section -->
      <Label alignment="CENTER" layoutX="74.0" layoutY="456.0" prefHeight="18.0" prefWidth="579.0" text="Committed to Advancing Health and Well-Being for Every Patient." textFill="#ffffff">
         <font>
            <Font name="Segoe UI Italic" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
