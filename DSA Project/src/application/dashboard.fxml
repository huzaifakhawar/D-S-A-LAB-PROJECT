      <AnchorPane layoutX="190.0" layoutY="70.0" prefHeight="380.0" prefWidth="320.0" style="-fx-background-color: #222222; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.3, 0, 4);">
         <children>
            <Label layoutX="95.0" layoutY="20.0" text="Dashboard" textFill="#38e4c5">
               <font>
                  <Font name="Segoe UI Semibold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="80.0" layoutY="55.0" text="Select Your Role to Login" textFill="#a0a0a0">
               <font>
                  <Font name="Segoe UI" size="14.0" />
               </font>
