            <Button layoutX="40.0" layoutY="100.0" onAction="#handleDoctorLogin" onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" prefWidth="240.0" style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt;" text="Doctor" textFill="#FFFFFF">
            </Button>
            <Button layoutX="40.0" layoutY="150.0" onAction="#handleNurseLogin" onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" prefWidth="240.0" style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt;" text="Nurse" textFill="#FFFFFF">
            </Button>
            <Button layoutX="40.0" layoutY="200.0" onAction="#handlePatientLogin" onMouseEntered="#handleButtonMouseEnter" onMouseExited="#handleButtonMouseExit" prefWidth="240.0" style="-fx-background-color: #424242; -fx-background-radius: 20; -fx-font-family: 'Segoe UI Semibold'; -fx-font-size: 12pt;" text="Patient" textFill="#FFFFFF">
